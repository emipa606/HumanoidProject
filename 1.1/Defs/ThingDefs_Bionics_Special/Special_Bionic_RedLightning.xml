		<workAmount>5200</workAmount>
		<skillRequirements>
			<Medicine>12</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>5</count>
