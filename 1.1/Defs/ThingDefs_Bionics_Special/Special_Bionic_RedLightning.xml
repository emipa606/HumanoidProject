			<thingDefs>
				<li>StormPower</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Heart</li>
		</appliedOnFixedBodyParts>
		<addsHediff>RedLightningImpact</addsHediff>
	</RecipeDef>
	
