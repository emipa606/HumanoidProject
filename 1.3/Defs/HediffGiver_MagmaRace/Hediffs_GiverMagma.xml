<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>MagmaHeatWorker</defName>
    <defaultLabelColor>(234,148,18)</defaultLabelColor>
    <label>Volcanian Heat Isolation</label>
    <description>Volcanian Heat Isolation</description>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <label>Initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>Warm</label>
        <minSeverity>0.05</minSeverity>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Scalding</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Hot</label>
        <minSeverity>0.35</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Burning</label>
        <minSeverity>0.50</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Glowing</label>
        <minSeverity>0.70</minSeverity>
        <painOffset>-0.20</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.30</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <HediffDef>
    <defName>MagmaRaceHypothermia</defName>
    <defaultLabelColor>(234,148,18)</defaultLabelColor>
    <label>Volcanian Cold Isolation</label>
    <description>Volcanian Cold Isolation</description>
    <lethalSeverity>2.0</lethalSeverity>
    <stages>
      <li>
        <label>Frosty</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>Icy</label>
        <minSeverity>0.10</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.02</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Cool</label>
        <minSeverity>0.25</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Inhospitable</label>
        <minSeverity>0.45</minSeverity>
        <painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Polar</label>
        <minSeverity>1.5</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>0.30</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>