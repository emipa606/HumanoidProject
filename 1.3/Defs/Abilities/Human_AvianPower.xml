<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--====== Storm Power Race ======-->
  <AbilityUser.AbilityDef>
    <defName>AvianPower</defName>
    <label>Runic Bolt</label>
    <uiIconPath>UI/Icons/Commands/AvianAbility</uiIconPath>
    <description>A Runic Bolt that can only be casted by Avian Race. Has a Massive Area of Impact. The "Runic Fire" cannot be Extinguished but due to an incompatible atmosphere it will Disappear very fast. Warning! "Runic Fire" will help spread the "Normal Fire" in an abnormal way so be very careful when casting this Ability really close to your Colony. (To correctly Cast the Bolt Make sure your view is Clear)</description>
    <MainVerb Class="AbilityUser.VerbProperties_Ability">
      <abilityDef>AvianPower</abilityDef>
      <verbClass>AbilityUser.Verb_UseAbility</verbClass>
      <tooltipShowProjectileDamage>false</tooltipShowProjectileDamage>
      <tooltipShowExtraDamages>false</tooltipShowExtraDamages>
      <tooltipShowHediffsToApply>false</tooltipShowHediffsToApply>
      <tooltipShowMentalStatesToApply>false</tooltipShowMentalStatesToApply>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>Projectile_AvianPower</defaultProjectile>
      <isViolent>true</isViolent>
      <warmupTime>1.8</warmupTime>
      <SecondsToRecharge>440</SecondsToRecharge>
      <range>44</range>
      <burstShotCount>1</burstShotCount>
      <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
      <muzzleFlashScale>20</muzzleFlashScale>
      <isPrimary>false</isPrimary>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
        <canTargetItems>false</canTargetItems>
        <canTargetSelf>false</canTargetSelf>
      </targetParams>
    </MainVerb>
  </AbilityUser.AbilityDef>
  <ThingDef ParentName="EvaineQBullets" Class="ThingDef">
    <defName>Projectile_AvianPower</defName>
    <thingClass>RaceAbilities.Projectile_LightningStorm</thingClass>
    <label>Runic Bolt</label>
    <graphicData>
      <texPath>UI/Icons/Commands/AvianAbility</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <explosionRadius>4</explosionRadius>
      <damageDef>BlueFire</damageDef>
      <damageAmountBase>30</damageAmountBase>
      <speed>75</speed>
    </projectile>
  </ThingDef>
