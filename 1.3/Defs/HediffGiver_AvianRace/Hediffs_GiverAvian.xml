<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>AvianRaceWorkerHypothermia</defName>
    <defaultLabelColor>(255,255,102)</defaultLabelColor>
    <label>Avian Cold Resistence</label>
    <description>Avian Cold Resistence</description>
    <stages>
      <li>
        <label>Cold</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>Frosty</label>
        <minSeverity>0.05</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Icy</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Wintry</label>
        <minSeverity>0.40</minSeverity>
        <painOffset>-0.05</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Artic</label>
        <minSeverity>0.70</minSeverity>
        <painOffset>-0.10</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <HediffDef>
    <defName>AvianHeatResistence</defName>
    <defaultLabelColor>(234,148,18)</defaultLabelColor>
    <label>Avian Heat Resistence</label>
    <description>Avian Heat Resistence</description>
    <lethalSeverity>2.0</lethalSeverity>
    <stages>
      <li>
        <label>Warm</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>Warm</label>
        <minSeverity>0.10</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.02</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Blistering</label>
        <minSeverity>0.25</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Hot</label>
        <minSeverity>0.45</minSeverity>
        <painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Ardent</label>
        <minSeverity>1.5</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>0.30</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>