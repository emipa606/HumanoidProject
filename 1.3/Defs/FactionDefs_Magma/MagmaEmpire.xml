<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>MagmaEmpire</defName>
    <label>Volcanian Settlement</label>
    <description>Settlement Of Volcanians. They tend to be a friendly Race but when threatened they can pull together a formidable fighting force.</description>
    <pawnsPlural>Volcanian Soldiers</pawnsPlural>
    <settlementGenerationWeight>0.9</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <earliestRaidDays>30</earliestRaidDays>
    <canMakeRandomly>True</canMakeRandomly>
    <autoFlee>false</autoFlee>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Devorant</leaderTitle>
    <permanentEnemy>false</permanentEnemy>
    <colorSpectrum>
      <li>(1, 1, 1)</li>
    </colorSpectrum>
    <fixedName>Volcanian Dominion</fixedName>
    <settlementNameMaker>MagmaNamer</settlementNameMaker>
    <techLevel>Industrial</techLevel>
    <backstoryCategories>
      <li>Outlander</li>
    </backstoryCategories>
    <allowedCultures>
      <li>Rustican</li>
    </allowedCultures>
    <caravanTraderKinds>
      <li>Magma_AvianTraderCaravan</li>
      <li>Magma_AvianCombatSupplier</li>
      <li>Magma_AvianPirateMerchant</li>
      <li>Magma_AvianExotic</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Magma_AvianTraderVisitor</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Magma_AvianTraderBase</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-20</min>
      <max>90</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <MagmaSoldierNormal>250</MagmaSoldierNormal>
          <MagmaCommander>250</MagmaCommander>
          <MagmaTroop>250</MagmaTroop>
          <MagmaSpeeder>250</MagmaSpeeder>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <commonality>100</commonality>
        <options>
          <MagmaSpeeder>250</MagmaSpeeder>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <MagmaTrader>1</MagmaTrader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>1</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>3</Elephant>
        </carriers>
        <guards>
          <MagmaSpeeder>40</MagmaSpeeder>
          <MagmaSoldierNormal>40</MagmaSoldierNormal>
          <MagmaTroop>50</MagmaTroop>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <MagmaSoldierNormal>250</MagmaSoldierNormal>
          <MagmaCommander>250</MagmaCommander>
          <MagmaTroop>350</MagmaTroop>
          <MagmaSpeeder>280</MagmaSpeeder>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>WorldIcons/Magma/FireSettlement</settlementTexturePath>
    <factionIconPath>WorldIcons/Magma/MagmaVillage</factionIconPath>
  </FactionDef>
</Defs>